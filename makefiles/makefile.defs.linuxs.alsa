CC = gcc -std=gnu99

CXX = g++ -std=c++0x

CFLAGS = -DNO_GRAPHICS -DUNIX -Dlinux -DALSA -D_FILE_OFFSET_BITS=64 -Werror=missing-prototypes -Werror=implicit -Wreturn-type -Wunused -Wunused-parameter -Wuninitialized -O1 -g1 -pthread

CXXFLAGS = $(CFLAGS) -Wshadow

LINK = g++

